{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./src",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@common/*": ["common/*"],
      "@configs/*": ["configs/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["src/**/*.ts", "cli/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
